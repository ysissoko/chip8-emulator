{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Chip8", // Path to your executable
            "args": [
                "--rom=Airplane.ch8"
            ], // Command line arguments if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
